[
  {
    "type": "function",
    "function": {
      "name": "search_flights",
      "description": "Search for available flights between cities.",
      "parameters": {
        "type": "object",
        "properties": {
          "origin": {
            "type": "string",
            "description": "Departure airport code"
          },
          "destination": {
            "type": "string",
            "description": "Arrival airport code"
          },
          "departure_date": {
            "type": "string",
            "description": "Departure date (YYYY-MM-DD)"
          },
          "return_date": {
            "type": "string",
            "description": "Return date (YYYY-MM-DD), optional for one-way"
          }
        },
        "required": ["origin", "destination", "departure_date"]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "book_flight",
      "description": "Book a specific flight. Requires flight_id from search results.",
      "parameters": {
        "type": "object",
        "properties": {
          "flight_id": {
            "type": "string",
            "description": "Flight identifier from search results"
          },
          "passenger_name": {
            "type": "string",
            "description": "Full name as on passport"
          }
        },
        "required": ["flight_id", "passenger_name"]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "search_hotels",
      "description": "Search for hotels in a location.",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "City or area to search"
          },
          "checkin": {
            "type": "string",
            "description": "Check-in date (YYYY-MM-DD)"
          },
          "checkout": {
            "type": "string",
            "description": "Check-out date (YYYY-MM-DD)"
          }
        },
        "required": ["location", "checkin", "checkout"]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "book_hotel",
      "description": "Book a specific hotel. Requires hotel_id from search results.",
      "parameters": {
        "type": "object",
        "properties": {
          "hotel_id": {
            "type": "string",
            "description": "Hotel identifier from search results"
          },
          "guest_name": {
            "type": "string",
            "description": "Guest name for reservation"
          }
        },
        "required": ["hotel_id", "guest_name"]
      }
    }
  }
]
